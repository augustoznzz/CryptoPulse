modules = ["python-3.11"]

[nix]
channel = "stable-25_05"
packages = ["glibcLocales", "libxcrypt", "pkg-config", "xsimd"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Crypto Analyzer"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "crypto_analyzer_test"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Demo Test"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "ETH Demo Test"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Real BTC Test"

[[workflows.workflow.tasks]]
